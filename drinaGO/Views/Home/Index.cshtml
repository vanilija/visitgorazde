@{
    ViewBag.Title = "Gorazde Tourism";
}
@{
    ViewBag.Hi = "Hi";
    ViewBag.Welcome = "Welcome to industrial, cultural, administrative, university and sports center of Upper Drina's region of Bosnia - podrinje canton. We hope to see you soon.";
}

<body class="indexsadrzaj">

    <section class="bg-1 text-center">
        <h1 class="">WELCOME</h1>
        <!--<p class="lead">Add Some Motion</p>-->
    </section>

    <div class="section1">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <h4 align="center">@ViewBag.Header</h4>
            <hr />
            <p align="center">
                Enjoy your stay in beatiful city of Goražde. DrinaGo team is wishing you a pleasant stay.
            </p>
            <form style="display: inline" action="http://visitgorazde.azurewebsites.net/Home/About" method="get">
                <button class="btn btn-hero btn-group-xs" role="button">Learn more</button>
            </form>
        </div>
    </div>

    <section class="bg-2">
        <div class="col-sm-10 col-sm-offset-1 text-center">
            <h1 class="">EXPLORE</h1>
        </div>
    </section>

    <div class="section1">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <h4 align="center">@ViewBag.Header</h4>
            <hr />
            <p align="center">
                Whether you hike, ride, drive, Goražde can offer you some truly breathtaking scenes.
            </p>
            <form style="display: inline" action="http://visitgorazde.azurewebsites.net/Home/About" method="get">
                <button class="btn btn-hero btn-group-xs" role="button">Learn more</button>
            </form>
        </div>
    </div>



    <section class="bg-3 text-center">
        <h1 class="">EAT AND SLEEP</h1>
        <p class="lead"></p>
    </section>

    <div class="section1">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <h4 align="center">@ViewBag.Header</h4>
            <hr />
            <p align="center">
                There is many places to eat in Goražde, maybe you prefer to go orders, maybe you prefer to stay and enjoy the view of some great restaurants? You are in the right place.
            </p>
            <form style="display: inline" action="http://visitgorazde.azurewebsites.net/Home/About" method="get">
                <button class="btn btn-hero btn-group-xs" role="button">Learn more</button>
            </form>
        </div>
    </div>
</body>

